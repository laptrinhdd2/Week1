<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--Style Text View-->
    <style name="styleTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/textSize</item>
        <item name="android:padding">@dimen/paddingTextView</item>
        <item name="android:layout_margin">@dimen/marginTextView</item>
        <item name="android:background">@drawable/text_view</item>
        <item name="android:text">@string/textView</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>
</resources>
